.content
  = render "/layouts/header"
  h1 Search Results
  = render "/category/cat_index"
  = render "/search/search_box"
  - if flash[:notice]
    .flash
      .message = flash[:notice]
    
  - unless @flower_items.size == 0
      .flower_block = render partial: '/flower_items/flower_item', collection: @flower_items, locals: {full_details: false}
  - else
      .error Sorry, no results found
  
